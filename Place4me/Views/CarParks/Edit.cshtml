@model BusinessEntities.Database.carpark

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container body-content">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.carpark_id)
        @Html.HiddenFor(model => model.carpark_status)

        <div class="form-horizontal col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h4>carpark</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                    @Html.LabelFor(model => model.carpark_place, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                    @Html.EditorFor(model => model.carpark_place, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.carpark_place, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                    @Html.LabelFor(model => model.carpark_place_lat, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                    @Html.EditorFor(model => model.carpark_place_lat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.carpark_place_lat, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                    @Html.LabelFor(model => model.carpark_place_long, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                    @Html.EditorFor(model => model.carpark_place_long, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.carpark_place_long, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    @Html.Partial("_Footer")
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
