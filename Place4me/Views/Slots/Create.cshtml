@model BusinessEntities.Database.slot
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="container body-content">
    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.carpark_id)

        <div class="form-horizontal col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h4>Slots</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                        @Html.LabelFor(model => model.slot_isFree, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                        @Html.EditorFor(model => model.slot_isFree, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.slot_isFree, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
    @Html.Partial("_Footer")
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
